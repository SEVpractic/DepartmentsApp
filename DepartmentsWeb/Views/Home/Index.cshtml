@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<DepartmentsWeb.Models.Dto.DepartmentDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Список организаций</h1>
        </div>
        <div class="col">
            <div class="col text-end pt-1">
                <a asp-action="" class="btn btn-outline-primary"><i class="fas fa-plus"> Синхранизировать</i></a>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Наименование
                </th>
                <th>
                    Состояние
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.IsActive
                    </td>
                    @* <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>
