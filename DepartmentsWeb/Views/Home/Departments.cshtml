@{
    ViewData["Title"] = "Departments";
}

@model IEnumerable<DepartmentsWeb.Models.Dto.DepartmentDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Список подразделений</h1>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Наименование
                </th>
                <th>
                    Статус
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @if (@item.IsActive)
                        {
                            <div>
                                Активно
                            </div>
                        } else
                        {
                            <div>
                                Заблокировано
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-sm-4">
        <form asp-action="Synchronize" enctype="multipart/form-data">
            <input type="hidden" name="Synchronize" />
            @Html.AntiForgeryToken()
            <p>
                <input type="file" name="file" />
            </p>
            <div class="col text-end pt-1">
                <button class="btn btn-outline-primary"><i class="fas fa-plus">Синхронизация данных</i></button>
            </div>
        </form>
    </div>
</div>
